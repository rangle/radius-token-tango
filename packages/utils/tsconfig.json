{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "ESNext", "DOM"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  /* Monorepo */
  "composite": true,

  /* Include only the source files */
  "include": ["./*.ts", "../radius-toolkit/src/lib/tokens/layer-diff.test.ts", "../radius-toolkit/src/lib/tokens/layer-diff.utils.ts"]
}
